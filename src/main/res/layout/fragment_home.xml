<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.mlsdev.animatedrv.AnimatedRecyclerView
            android:id="@+id/rv_home_offers_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:animationDuration="1000"
            android:layout_marginTop="@dimen/dp16w"
            android:layout_marginBottom="@dimen/dp16w"
            app:layoutAnimation="@anim/layout_animation_from_scale"
            app:layoutManagerOrientation="horizontal"
            app:layoutManagerReverse="false"
            app:layoutManagerType="linear" />


        <com.mlsdev.animatedrv.AnimatedRecyclerView
            android:id="@+id/rv_home_offers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:animationDuration="1000"
            android:layout_marginBottom="@dimen/dp16w"
            app:layoutAnimation="@anim/layout_animation_from_bottom"
            app:layoutManagerOrientation="vertical"
            app:layoutManagerReverse="false"
            app:layoutManagerType="linear" />

    </LinearLayout>


</layout>
